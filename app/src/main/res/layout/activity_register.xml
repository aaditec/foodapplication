<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grad_back"
        tools:context="activity.RegisterActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/client_logo"
            android:src="@drawable/web_logo_sl" />
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="7dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/rlHeader"
        tools:layout_editor_absoluteX="-24dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/edtEnterName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/ic_baseline_account_circle_24"
            android:drawableRight="@drawable/ic_baseline_account_circle_24"
            android:hint="@string/FullName"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="15" />

        <EditText
            android:id="@+id/edtEnterEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
             />


        <EditText
            android:id="@+id/edtEnterMobile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/mobile_clip"
            android:drawableRight="@drawable/mobile_clip"
            android:hint="@string/mobile_number"
            android:maxLength="10"
            android:importantForAutofill="no"

             />

        <EditText
            android:id="@+id/edtEnterAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/location_clip"
            android:drawableRight="@drawable/location_clip"
            android:hint="@string/Address"
            android:importantForAutofill="no"

             />

        <EditText
            android:id="@+id/edtEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
            android:drawableRight="@drawable/ic_baseline_vpn_key_24"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="10" />

        <EditText
            android:id="@+id/edtEnterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_back"
            android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
            android:drawableRight="@drawable/ic_baseline_vpn_key_24"
            android:hint="@string/confirm_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:maxLength="10" />

    </LinearLayout>

    <Button

        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/grad_back"
        android:layout_gravity="center"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/loginPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    </LinearLayout>